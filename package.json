{
  "name": "yet-another-aa",
  "version": "0.0.4",
  "description": "BLS Aggregate Signature + ERC-4337 Account Abstraction System",
  "private": true,
  "workspaces": [
    "signer",
    "aastar",
    "aastar-frontend"
  ],
  "scripts": {
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "npm run lint -ws",
    "lint:fix": "npm run lint:fix -ws",
    "build": "npm run build -ws",
    "test": "npm run test -ws",
